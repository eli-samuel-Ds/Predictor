@model Application.ViewModels.ValidadoDataPredictorViewModel
@{
    ViewData["Title"] = "Predictor Home";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h2>PREDICTOR</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Items[i].Fecha" class="form-label">Fecha @(@i + 1)</label>
                                    <input asp-for="Items[i].Fecha" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="Items[i].Fecha" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Items[i].Valor" class="form-label">Número @(@i + 1)</label>
                                    <input asp-for="Items[i].Valor" class="form-control" type="number" value="1000"/>
                                    <span asp-validation-for="Items[i].Valor" class="text-danger"></span>
                                </div>
                            </div>
                        }
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Calcular Predictor</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model Application.Dtos.SalidaValidadoDataPredictorDto

@{
    ViewData["Title"] = "Resultado Regresión Lineal";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-5">Regresión Lineal</h2>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Pendiente (m)</h5>
                    <p class="card-text display-6">@Model.RegressionSlope</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Intercepto (b)</h5>
                    <p class="card-text display-6">@Model.RegressionIntercept</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Predicción día @((Model.Items.Count) + 1)</h5>
                    <p class="card-text display-6">@Model.PredictedValue</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Tendencia Estimada</h5>
                    <p class="card-text display-6">@Model.Trend</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-action="Index" class="btn btn-outline-primary btn-lg shadow-sm">
            <i class="bi bi-arrow-counterclockwise me-2"></i> Nueva Predicción
        </a>
    </div>
</div>
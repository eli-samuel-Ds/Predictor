@model Application.Dtos.SalidaValidadoDataPredictorDto

@{
    ViewData["Title"] = "Resultado ROC (Momentum)";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-5">Momentum (ROC)</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha</th>
                            <th>Precio</th>
                            <th>Porcentaje ROC</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <tr>
                                <td>@Model.Items[i].Fecha.ToShortDateString()</td>
                                <td>@Model.Items[i].Valor</td>
                                <td>@(Model.RocValues[i]?.ToString("F2") + "%" ?? "n/a")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <div class="card shadow-sm d-inline-block">
            <div class="card-body">
                <h5 class="card-title">Tendencia Estimada</h5>
                <p class="card-text display-6">@Model.Trend</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-action="Index" class="btn btn-outline-primary btn-lg shadow-sm">
            <i class="bi bi-arrow-counterclockwise me-2"></i> Nueva Predicción
        </a>
    </div>
</div>

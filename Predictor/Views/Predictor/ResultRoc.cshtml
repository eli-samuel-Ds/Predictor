@model Application.Dtos.SalidaValidadoDataPredictorDto

@{
    ViewData["Title"] = "Resultado ROC (Momentum)";
}

<div class="container py-5">
    <h3>Momentum (ROC) – Periodo 5</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>t</th>
                <th>Fecha</th>
                <th>Precio</th>
                <th>ROC (%)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Model.Items[i].Fecha.ToShortDateString()</td>
                    <td>@Model.Items[i].Valor</td>
                    <td>
                        @(Model.RocValues[i]?.ToString("F2") + "%" ?? "n/a")
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p><strong>Tendencia estimada:</strong> @Model.Trend</p>
    <a asp-action="Index" class="btn btn-outline-primary mt-3">Nueva Predicción</a>
</div>
